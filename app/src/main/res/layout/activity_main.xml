<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/app_logoId"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/applogo"
        />

    <TextView
        android:id="@+id/app_sloganId"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="140dp"
        android:text="Find, Discover, Choose and Buy as your need"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        />

    <Button
        android:id="@+id/main_login_buttonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_background"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        android:textSize="18dp"
        android:text="Already have an account? Login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"

        />

    <Button
        android:id="@+id/main_joinnow_buttonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back_register"
        android:layout_above="@id/main_login_buttonId"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        android:textSize="18dp"
        android:text="Join Now "
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"

        />







</RelativeLayout>