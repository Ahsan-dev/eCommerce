<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="15dp"

    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/card_product_nameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
        <ImageView
            android:id="@+id/card_product_imageID"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/card_product_nameID"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/card_product_priceID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Price"
            android:textAlignment="center"
            android:layout_below="@id/card_product_imageID"
            android:textSize="18dp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/card_product_descriptionID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:layout_below="@id/card_product_priceID"
            android:textSize="16dp"
            android:textColor="@android:color/holo_blue_dark"/>






    </RelativeLayout>

</android.support.v7.widget.CardView>