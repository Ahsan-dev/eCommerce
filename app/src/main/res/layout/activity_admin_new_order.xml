<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminNewOrderActivity">

    <RelativeLayout
        android:id="@+id/relativeChieldID"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/new_order_welcome_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Orders to be shipped"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/new_order_recyclerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeChieldID"

        />

</RelativeLayout>