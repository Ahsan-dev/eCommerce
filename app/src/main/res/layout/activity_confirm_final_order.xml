<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/shipment_welcome_text_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please put your Shipment Details"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        />


    <ScrollView
        android:id="@+id/shipment_scroll_Id"
        android:layout_below="@id/shipment_welcome_text_Id"
        android:layout_above="@id/shipment_confirm_Btn_Id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/shipment_user_name_txtId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Name..."
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    />
                <EditText
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/shipment_user_phone_txtId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Phone Number..."
                    android:layout_below="@id/shipment_user_name_txtId"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="16dp"
                    />
                <EditText
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/shipment_user_address_txtId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Precise Address...\ni.e. home-street-union-upajilla-district-division-country"
                    android:layout_below="@id/shipment_user_phone_txtId"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="16dp"
                    />
                <EditText
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/shipment_user_city_txtId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your City..."
                    android:layout_below="@id/shipment_user_address_txtId"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    />



            </RelativeLayout>
        </LinearLayout>


    </ScrollView>



    <Button
        android:id="@+id/shipment_confirm_Btn_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="Confirm Shipment"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        />


</RelativeLayout>